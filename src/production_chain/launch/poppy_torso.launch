<?xml version="1.0"?>
<launch>


      <!-- SIMULATOR -->
    <!-- Load the URDF into the ROS Parameter Server -->
    <param name="robot_description" command="cat $(find poppy_torso_description)/urdf/poppy_torso.urdf" />



    <!-- Run a python script to the send a service call to gazebo_ros to spawn a URDF robot -->
    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
  args="-urdf -z 0.0 -x -0.33 -y -0.24 -Y -2.5 -model poppy_torso -param robot_description">
    <remap from="/robot_description" to="/torso/robot_description" />
   </node>

  
<!--
<group ns="torso" >
    <param name="tf_prefix" value="torso_tf" />
  -->  
    
    <!-- CONTROLLERS -->
	<param name="robot_description" command="$(find xacro)/xacro $(find poppy_torso_description)/urdf/poppy_torso.urdf.xacro" />

    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(find poppy_torso_gazebo)/config/gazebo_control_trajectory.yaml" command="load"/>

    <!-- load the controllers -->
    <node 
        name="controller_spawner" 
        pkg="controller_manager" 
        type="spawner" 
        respawn="false"
        output="screen"
        ns="/poppy_torso"
        args="	joint_state_controller
                r_arm_controller
                l_arm_controller
                head_controller
                torso_controller
                "
    />

  <!-- convert joint states to TF transforms for rviz, etc -->
    <node 
        name="robot_state_publisher_ergo" 
        pkg="robot_state_publisher" 
        type="robot_state_publisher"
        ns="poppy_torso"
        respawn="false" output="screen">
        <remap from="/joint_states" to="/poppy_torso/joint_states" />
    </node>

    <node name="joint_states_cloner" pkg="topic_tools" type="relay"
      args="/poppy_torso/joint_states /joint_states" />
  
  
<!-- </group> -->

</launch>

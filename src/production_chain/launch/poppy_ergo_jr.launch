<?xml version="1.0"?>
<launch>

  <arg name="gripper" default="true"/>
  <arg name="lamp" default="false"/>
  <arg name="traj" default="true"/>

  <param name="robot_description" command="$(find xacro)/xacro $(find poppy_ergo_jr_description)/urdf/poppy_ergo_jr.urdf.xacro gripper:=$(arg gripper) lamp:=$(arg lamp)" />
  
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model ergo_jr -x 0 -y 0.06 -z 0.05 -Y 3.05 -J ergo_jr::m1 0.0 -J ergo_jr::m2 0.0 -J ergo_jr::m3 0.0 -J ergo_jr::m4 0.0 -J ergo_jr::m5 0.0 -J ergo_jr::m6 0.0 -unpause "
    respawn="false" output="screen" >
    <remap from="/robot_description" to="/ergo/robot_description" />
   </node>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find poppy_ergo_jr_moveit_config)/config/ros_controllers.yaml" command="load"/>

  <!-- Load the trajectory controller for the gripper configuration-->

  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" ns="/ergo/ergo_jr" output="screen"
          args="--namespace=/ergo/ergo_jr
          joint_state_controller
          arm_controller
          --timeout 20"/>
  
  
  
</launch>

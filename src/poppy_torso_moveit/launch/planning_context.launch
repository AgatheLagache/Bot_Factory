<launch>
  <!-- By default we do not overwrite the URDF. Change the following to true to change the default behavior -->
  <arg name="load_robot_description_torso" default="false"/>

  <!-- The name of the parameter under which the URDF is loaded -->
  <arg name="robot_description_torso" default="robot_description_torso"/>

  <!-- Load universal robot description format (URDF) -->
  <param if="$(arg load_robot_description_torso)" name="$(arg robot_description_torso)" textfile="$(find poppy_torso_description)/urdf/poppy_torso.urdf"/>

  <!-- The semantic description that corresponds to the URDF -->
  <param name="$(arg robot_description_torso)_semantic" textfile="$(find poppy_torso_moveit)/config/poppy_torso.srdf" />

  <!-- Load updated joint limits (override information from URDF) -->
  <group ns="$(arg robot_description_torso)_planning">
    <rosparam command="load" file="$(find poppy_torso_moveit)/config/joint_limits.yaml"/>
  </group>

  <!-- Load default settings for kinematics; these settings are overridden by settings in a node's namespace -->
  <group ns="$(arg robot_description_torso)_kinematics">
    <rosparam command="load" file="$(find poppy_torso_moveit)/config/kinematics.yaml"/>
  </group>

</launch>
